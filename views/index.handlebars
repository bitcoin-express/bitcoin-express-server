<link
  href='https://fonts.googleapis.com/css?family=Open+Sans:700,600'
  rel='stylesheet'
  type='text/css'
>

<form method="post" id="login_form" action="/panel/home">
  <div class="box">
    <h1>Merchant Gateway</h1>
    <small>Auth token:</small><br />
    <input type="password" name="authToken" value="" class="email" required/>
    <br/>
    <small style="color: red">{{{json error}}}</small>
    <br/>
    <a id="login" href="#">
      <div class="btn">
        Sign In
      </div>
    </a> <!-- End Btn -->
    <a href="panel/register">
      <div id="btn2">
        Sign Up
      </div>
    </a> <!-- End Btn2 -->
  </div> <!-- End Box -->
</form>

<p>
  Forgot your auth token? <u style="color:#f1c40f;">Click Here!</u>
</p>
<script
  src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"
  type="text/javascript"
>
</script>

<script type="text/javascript">
document.getElementById("login").onclick = function() {
  var f = document.getElementById("login_form");
  if (f.checkValidity()) {
    f.submit();
  } else {
    f.reportValidity();
  }
};
</script>
